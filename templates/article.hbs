{{#> boilerplate title=headline desc=desc}}

{{>header}}

<section class="meta">
  <div class="topic">
    {{#each topic}}
    {{!--TODO Change to ::before when css --}}
    <span>
      /
      {{this}}
    </span>
    {{/each}}
  </div>

  <h1 class="headline">
    {{#if headline}}
    {{headline}}
    {{else}}
    <span class="missing">
      [no headline]
    </span>
    {{/if}}
  </h1>

  <h2 class="stats">
    {{!--TODO Add icons --}}
    - <span class="author"> {{#if author}}{{author}}{{else}}<span class="missing">Unknown Author</span>{{/if}}</span>
    - <span class="date"> {{#if date}}{{date}}{{else}}<span class="missing">Unknown Date</span>{{/if}}</span>
    - <span class="topic">
      {{#if topic}}{{#each topic}}{{#if @last}}{{this}}{{/if}}{{/each}}{{else}}<span class="missing">Unknown
        Topic</span>{{/if}}
    </span>
  </h2>
</section>

<section class="image">
  {{#if image}}
  <img href={{image}} alt="{{#if alt}}{{alt}}{{else}}Some image{{/if}}" />
  {{/if}}
</section>

<section class="content">
  {{#if body}}
  {{{body}}}
  {{else}}
  <span class="missing">Nothing here!</span>
  {{/if}}
</section>

{{/boilerplate}}